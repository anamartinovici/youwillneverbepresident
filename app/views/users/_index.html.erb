<div class="results-page">
<div class="jumbotron" style="background-color: white; padding-left:50px;margin-right:50px;padding-top: 20px;padding-right: 50px;">
  
    <% if @user.old_email %>
      <h1>Hello, <%= @user.old_email %></h1>
    <% end %> <br>
  <div class="percentages">
    <% if @myspace_photo == "https://x.myspacecdn.com/new/common/images/user.png"%>
      <h2>You've covered your Myspace tracks well.</h2>
      <% elsif @myspace_photo %>
      <!-- <h3>Say hello to your old Myspace self:</h3> -->
      <img class="img-circle" src="<%= @myspace_photo %>" alt="Myspace Profile Picture">
    <% elsif !@myspace_photo%>
      <h5>input your old email so we can do some Myspace digging</h5>
    <% end %>
  </div>
  <div class="percentages" style="margin-left:60px;margin-right:60px;">
    <% if !@tweets.nil? && !@facebook_photos.nil? %>
      <div style="font-size:110px;"><%= @fb_percentage %>%</div>
      <div style="font-size:20px;"><p>The percentage of facebook<br>photos that may be embarrassing.</p></div>
    <% end %>
  </div>
  <div class="percentages">
    <% if !@tweets.nil? && !@facebook_photos.nil? %>
      <div style="font-size:110px;"><%= @twitter_percentage %>%</div>
      <div style="font-size:20px;"><p>The percentage of tweets that <br> may be embarrassing or profane.</p></div>
    <% end %>
  </div>
</div>




<div class="jumbotron">

  <div class="tweets">
    <% if !@tweets.nil? %>
    	<h2>Your tainted tweets: </h2>
    	<% @tweets.each do |tweet| %>
      <div class="tweets">
    	  <p><%= tweet.html_safe %></p>
      </div>
    	<% end %>
    <% elsif @tweets.nil?%>
      <h5>input your twitter handle to check your tweets</h5>
    <% else %>
    	<h2>Good job! Your tweets are squeaky clean. </h2>
    <% end %>
  </div>
</div>

<div class="jumbotron">
  <div>
    <% if !@facebook_statuses.nil? %>
    	<h2>Your profane Facebook statuses: </h2>
    	<% @facebook_statuses.each do |status| %>
        <p>
          <div class="fb-status-box">
            <div class="bs-example fb-status">
              <div class="media fb-inside-the-box">
                <a class="media-left" href="#">
                  <img data-src="holder.js/48x48" alt="64x64" src="data:image/png;base64," data-holder-rendered="true" style="width: 48px; height: 48px;">
                </a>
                <div class="media-body">
                  <h4 class="media-heading fb-name"><%= status["from"]["name"] %></h4>
                  <p><%= status["message"] %></p>
                </div>
              </div>
            </div>
          </div>
        </p>        
    	<% end %>
    <% elsif @facebook_statuses.nil?%>
      <h5>login with Facebook to check your photos and statuses.</h5>
    <% else %>
    	<h2>Good job! Your Facebook statuses are squeaky clean. </h2>
    <% end %>
  </div>
</div>

<% if !@facebook_photos.nil? %>
	<h2>Your profane Facebook photos: </h2>
  	<div class="masonry js-masonry" data-masonry-options='{ "isFitWidth": true, "itemSelector": ".item" }'>
    	<div class="grid-sizer">
      	<% @facebook_photos.each do |photo| %>
      	  <div class="item">
            <img src="<%=photo["images"].first["source"]%>" class="thumbnail img-responsive">
          </div>
      	<% end %>
      </div>
    </div>
<% elsif @facebook_statuses.nil?%>
<% else %>
	<h2>Good job! Your Facebook photos are squeaky clean. </h2>
<% end %>
<br>
<br>
</div>


